<% content_for :title, "Reset Password - Vantage Dokku" %>

<style>
  body {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    height: 100vh;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }
  
  .password-reset-container {
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    box-sizing: border-box;
  }
  
  .password-reset-card {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    overflow: hidden;
    width: 100%;
    max-width: 420px;
  }
  
  .password-reset-header {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    padding: 3rem 2rem 2rem;
    text-align: center;
    color: white;
    position: relative;
  }
  
  .password-reset-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/img/raychan-jrNY1BZhnJg-unsplash.jpg') center/cover;
    opacity: 0.2;
  }
  
  .password-reset-header .content {
    position: relative;
    z-index: 2;
  }
  
  .logo-container {
    margin-bottom: 1rem;
  }
  
  .logo-container img {
    height: 60px;
    width: auto;
    filter: brightness(0) invert(1);
  }
  
  .password-reset-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }
  
  .password-reset-subtitle {
    font-size: 0.95rem;
    opacity: 0.9;
    margin: 0.5rem 0 0;
    font-weight: 300;
  }
  
  .password-reset-body {
    padding: 2.5rem 2rem;
  }
  
  .form-floating {
    margin-bottom: 1.5rem;
  }
  
  .form-floating .form-control {
    height: calc(3.5rem + 2px);
    padding: 1rem 0.75rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }
  
  .form-floating .form-control:focus {
    border-color: #f093fb;
    box-shadow: 0 0 0 0.25rem rgba(240, 147, 251, 0.15);
  }
  
  .form-floating label {
    padding: 1rem 0.75rem;
    color: #6c757d;
  }
  
  .info-text {
    background: rgba(240, 147, 251, 0.1);
    border: 1px solid rgba(240, 147, 251, 0.2);
    border-radius: 12px;
    padding: 1rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    color: #495057;
  }
  
  .info-text i {
    color: #f093fb;
  }
  
  .btn-reset {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    border: none;
    border-radius: 12px;
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .btn-reset:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(240, 147, 251, 0.3);
  }
  
  .btn-reset:active {
    transform: translateY(0);
  }
  
  .password-reset-links {
    text-align: center;
    margin-top: 2rem;
  }
  
  .password-reset-links a {
    color: #f093fb;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  
  .password-reset-links a:hover {
    color: #f5576c;
    text-decoration: underline;
  }
  
  .btn-back {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 8px;
    padding: 0.5rem 1.5rem;
    color: white;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    margin-bottom: 0.5rem;
  }
  
  .btn-back:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    color: white;
    text-decoration: none;
  }
  
  .btn-signup-link {
    background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
    border: none;
    border-radius: 8px;
    padding: 0.5rem 1.5rem;
    color: white;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    margin-left: 0.5rem;
  }
  
  .btn-signup-link:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(86, 171, 47, 0.3);
    color: white;
    text-decoration: none;
  }
  
  /* Error styling */
  .alert-danger {
    background: rgba(220, 53, 69, 0.1);
    border: 1px solid rgba(220, 53, 69, 0.2);
    border-radius: 12px;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .alert-danger h6 {
    color: #dc3545;
    margin-bottom: 0.5rem;
  }
  
  .alert-danger ul {
    margin-bottom: 0;
    padding-left: 1.25rem;
  }
  
  .alert-danger li {
    color: #dc3545;
    font-size: 0.9rem;
  }
  
  /* Animation */
  .password-reset-card {
    animation: slideUp 0.6s ease-out;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 576px) {
    body {
      overflow: auto;
    }
    
    .password-reset-container {
      padding: 1rem;
      min-height: 100vh;
      height: auto;
    }
    
    .password-reset-header {
      padding: 2rem 1.5rem 1.5rem;
    }
    
    .password-reset-body {
      padding: 2rem 1.5rem;
    }
    
    .password-reset-title {
      font-size: 1.5rem;
    }
  }
  
  /* Dark mode support */
  [data-theme="dark"] .password-reset-card {
    background: rgba(30, 30, 30, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  [data-theme="dark"] .form-floating .form-control {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
    color: #fff;
  }
  
  [data-theme="dark"] .form-floating label {
    color: #adb5bd;
  }
  
  [data-theme="dark"] .info-text {
    background: rgba(240, 147, 251, 0.1);
    border-color: rgba(240, 147, 251, 0.3);
    color: #fff;
  }
</style>

<div class="password-reset-container">
  <div class="password-reset-card">
    <!-- Header with Logo -->
    <div class="password-reset-header">
      <div class="content">
        <div class="logo-container">
          <%= image_tag "/img/vantage_logo.svg", alt: "Vantage Dokku", class: "logo" %>
        </div>
        <h1 class="password-reset-title">Reset Password</h1>
        <p class="password-reset-subtitle">We'll send you instructions to reset your password</p>
      </div>
    </div>

    <!-- Password Reset Form -->
    <div class="password-reset-body">
      <!-- Info Message -->
      <div class="info-text">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Forgot your password?</strong> No worries! Enter your email address below and we'll send you a link to reset your password.
      </div>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <h6>
              <i class="fas fa-exclamation-triangle me-2"></i>
              Please correct the following errors:
            </h6>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Email Input -->
        <div class="form-floating">
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email", 
              class: "form-control", 
              id: "floatingEmail",
              placeholder: "name@example.com" %>
          <%= f.label :floatingEmail, "Email address" %>
        </div>

        <!-- Submit Button -->
        <div class="d-grid mb-3">
          <%= f.submit "Send Reset Instructions", class: "btn btn-reset btn-lg" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="password-reset-links">
        <%- if devise_mapping.authenticatable? %>
          <%= link_to "Back to Sign In", new_session_path(resource_name), class: "btn-back" %>
        <% end %>
        
        <%- if devise_mapping.registerable? %>
          <%= link_to "Create Account", new_registration_path(resource_name), class: "btn-signup-link" %>
        <% end %>
      </div>
    </div>
  </div>
</div>