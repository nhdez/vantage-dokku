<% content_for :title, "Sign Up - Vantage Dokku" %>

<style>
  body {
    background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
    height: 100vh;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }
  
  .signup-container {
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    box-sizing: border-box;
  }
  
  .signup-card {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    overflow: hidden;
    width: 100%;
    max-width: 460px;
  }
  
  .signup-header {
    background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
    padding: 3rem 2rem 2rem;
    text-align: center;
    color: white;
    position: relative;
  }
  
  .signup-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/img/raychan-jrNY1BZhnJg-unsplash.jpg') center/cover;
    opacity: 0.2;
  }
  
  .signup-header .content {
    position: relative;
    z-index: 2;
  }
  
  .logo-container {
    margin-bottom: 1rem;
  }
  
  .logo-container img {
    height: 60px;
    width: auto;
    filter: brightness(0) invert(1);
  }
  
  .signup-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }
  
  .signup-subtitle {
    font-size: 0.95rem;
    opacity: 0.9;
    margin: 0.5rem 0 0;
    font-weight: 300;
  }
  
  .signup-body {
    padding: 2.5rem 2rem;
  }
  
  .form-floating {
    margin-bottom: 1.5rem;
  }
  
  .form-floating .form-control {
    height: calc(3.5rem + 2px);
    padding: 1rem 0.75rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }
  
  .form-floating .form-control:focus {
    border-color: #56ab2f;
    box-shadow: 0 0 0 0.25rem rgba(86, 171, 47, 0.15);
  }
  
  .form-floating label {
    padding: 1rem 0.75rem;
    color: #6c757d;
  }
  
  .password-requirements {
    font-size: 0.875rem;
    color: #6c757d;
    margin-top: 0.5rem;
  }
  
  .btn-signup {
    background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
    border: none;
    border-radius: 12px;
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .btn-signup:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(86, 171, 47, 0.3);
  }
  
  .btn-signup:active {
    transform: translateY(0);
  }
  
  .btn-google {
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 0.875rem 1.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    color: #495057;
    transition: all 0.3s ease;
  }
  
  .btn-google:hover {
    background: #f8f9fa;
    border-color: #dc3545;
    color: #dc3545;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
  }
  
  .divider {
    position: relative;
    text-align: center;
    margin: 2rem 0;
  }
  
  .divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #dee2e6, transparent);
  }
  
  .divider-text {
    background: rgba(255, 255, 255, 0.98);
    padding: 0 1rem;
    color: #6c757d;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .signup-links {
    text-align: center;
    margin-top: 1.5rem;
  }
  
  .signup-links a {
    color: #56ab2f;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  
  .signup-links a:hover {
    color: #3d7820;
    text-decoration: underline;
  }
  
  .btn-signin {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 8px;
    padding: 0.5rem 1.5rem;
    color: white;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    margin-bottom: 0.5rem;
  }
  
  .btn-signin:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    color: white;
    text-decoration: none;
  }
  
  /* Error styling */
  .alert-danger {
    background: rgba(220, 53, 69, 0.1);
    border: 1px solid rgba(220, 53, 69, 0.2);
    border-radius: 12px;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .alert-danger h6 {
    color: #dc3545;
    margin-bottom: 0.5rem;
  }
  
  .alert-danger ul {
    margin-bottom: 0;
    padding-left: 1.25rem;
  }
  
  .alert-danger li {
    color: #dc3545;
    font-size: 0.9rem;
  }
  
  /* Animation */
  .signup-card {
    animation: slideUp 0.6s ease-out;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 576px) {
    body {
      overflow: auto;
    }
    
    .signup-container {
      padding: 1rem;
      min-height: 100vh;
      height: auto;
    }
    
    .signup-header {
      padding: 2rem 1.5rem 1.5rem;
    }
    
    .signup-body {
      padding: 2rem 1.5rem;
    }
    
    .signup-title {
      font-size: 1.5rem;
    }
  }
  
  /* Dark mode support */
  [data-theme="dark"] .signup-card {
    background: rgba(30, 30, 30, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  [data-theme="dark"] .form-floating .form-control {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
    color: #fff;
  }
  
  [data-theme="dark"] .form-floating label {
    color: #adb5bd;
  }
  
  [data-theme="dark"] .btn-google {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
    color: #fff;
  }
  
  [data-theme="dark"] .divider-text {
    background: rgba(30, 30, 30, 0.95);
    color: #adb5bd;
  }
  
  [data-theme="dark"] .password-requirements {
    color: #adb5bd;
  }
</style>

<div class="signup-container">
  <div class="signup-card">
    <!-- Header with Logo -->
    <div class="signup-header">
      <div class="content">
        <div class="logo-container">
          <%= image_tag "/img/vantage_logo.svg", alt: "Vantage Dokku", class: "logo" %>
        </div>
        <h1 class="signup-title">Join Vantage</h1>
        <p class="signup-subtitle">Create your account to start managing Dokku deployments</p>
      </div>
    </div>

    <!-- Registration Form -->
    <div class="signup-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
        <!-- Error Messages -->
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <h6>
              <i class="fas fa-exclamation-triangle me-2"></i>
              Please correct the following errors:
            </h6>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Email Input -->
        <div class="form-floating">
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email", 
              class: "form-control", 
              id: "floatingEmail",
              placeholder: "name@example.com" %>
          <%= f.label :floatingEmail, "Email address" %>
        </div>

        <!-- Password Input -->
        <div class="form-floating">
          <%= f.password_field :password, 
              autocomplete: "new-password", 
              class: "form-control", 
              id: "floatingPassword",
              placeholder: "Password" %>
          <%= f.label :floatingPassword, "Password" %>
          <% if @minimum_password_length %>
            <div class="password-requirements">
              <i class="fas fa-info-circle me-1"></i>
              Minimum <%= @minimum_password_length %> characters required
            </div>
          <% end %>
        </div>

        <!-- Password Confirmation Input -->
        <div class="form-floating">
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password", 
              class: "form-control", 
              id: "floatingPasswordConfirmation",
              placeholder: "Confirm Password" %>
          <%= f.label :floatingPasswordConfirmation, "Confirm Password" %>
        </div>

        <!-- Submit Button -->
        <div class="d-grid mb-3">
          <%= f.submit "Create Account", class: "btn btn-signup btn-lg" %>
        </div>
      <% end %>

      <!-- OAuth Sign-Up -->
      <% if OauthSetting.google_enabled? %>
        <div class="divider">
          <span class="divider-text">Or continue with</span>
        </div>
        
        <div class="d-grid">
          <%= link_to "/users/auth/google_oauth2", 
              method: :post,
              class: "btn btn-google btn-lg d-flex align-items-center justify-content-center",
              data: { turbo: false } do %>
            <i class="fab fa-google me-2" style="color: #dc3545;"></i>
            Sign up with Google
          <% end %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="signup-links">
        <%- if devise_mapping.authenticatable? %>
          <%= link_to "Already have an account?", new_session_path(resource_name), class: "btn-signin" %>
          <br>
        <% end %>
        
        <%- if devise_mapping.recoverable? %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
      </div>
    </div>
  </div>
</div>