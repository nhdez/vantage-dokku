<% content_for :title, "Sign In - Vantage Dokku" %>

<style>
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    height: 100vh;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }
  
  .login-container {
    height: 100vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    box-sizing: border-box;
  }
  
  .login-card {
    background: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(20px);
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    overflow: hidden;
    width: 100%;
    max-width: 420px;
  }
  
  .login-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 3rem 2rem 2rem;
    text-align: center;
    color: white;
    position: relative;
  }
  
  .login-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('/img/raychan-jrNY1BZhnJg-unsplash.jpg') center/cover;
    opacity: 0.2;
  }
  
  .login-header .content {
    position: relative;
    z-index: 2;
  }
  
  .logo-container {
    margin-bottom: 1rem;
  }
  
  .logo-container img {
    height: 60px;
    width: auto;
    filter: brightness(0) invert(1);
  }
  
  .login-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }
  
  .login-subtitle {
    font-size: 0.95rem;
    opacity: 0.9;
    margin: 0.5rem 0 0;
    font-weight: 300;
  }
  
  .login-body {
    padding: 2.5rem 2rem;
  }
  
  .form-floating {
    margin-bottom: 1.5rem;
  }
  
  .form-floating .form-control {
    height: calc(3.5rem + 2px);
    padding: 1rem 0.75rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }
  
  .form-floating .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.15);
  }
  
  .form-floating label {
    padding: 1rem 0.75rem;
    color: #6c757d;
  }
  
  .btn-login {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 12px;
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .btn-login:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
  }
  
  .btn-login:active {
    transform: translateY(0);
  }
  
  .btn-google {
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 0.875rem 1.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    color: #495057;
    transition: all 0.3s ease;
  }
  
  .btn-google:hover {
    background: #f8f9fa;
    border-color: #dc3545;
    color: #dc3545;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
  }
  
  .divider {
    position: relative;
    text-align: center;
    margin: 2rem 0;
  }
  
  .divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #dee2e6, transparent);
  }
  
  .divider-text {
    background: rgba(255, 255, 255, 0.98);
    padding: 0 1rem;
    color: #6c757d;
    font-size: 0.875rem;
    font-weight: 500;
  }
  
  .remember-me {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
  }
  
  .form-check-input {
    width: 1.25rem;
    height: 1.25rem;
    border-radius: 6px;
    border: 2px solid #dee2e6;
    margin-right: 0.75rem;
  }
  
  .form-check-input:checked {
    background-color: #667eea;
    border-color: #667eea;
  }
  
  .login-links {
    text-align: center;
    margin-top: 1.5rem;
  }
  
  .login-links a {
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }
  
  .login-links a:hover {
    color: #764ba2;
    text-decoration: underline;
  }
  
  .btn-signup {
    background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
    border: none;
    border-radius: 8px;
    padding: 0.5rem 1.5rem;
    color: white;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    margin-bottom: 0.5rem;
  }
  
  .btn-signup:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(86, 171, 47, 0.3);
    color: white;
    text-decoration: none;
  }
  
  /* Animation */
  .login-card {
    animation: slideUp 0.6s ease-out;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 576px) {
    body {
      overflow: auto;
    }
    
    .login-container {
      padding: 1rem;
      min-height: 100vh;
      height: auto;
    }
    
    .login-header {
      padding: 2rem 1.5rem 1.5rem;
    }
    
    .login-body {
      padding: 2rem 1.5rem;
    }
    
    .login-title {
      font-size: 1.5rem;
    }
  }
  
  /* Dark mode support */
  [data-theme="dark"] .login-card {
    background: rgba(30, 30, 30, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  [data-theme="dark"] .form-floating .form-control {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
    color: #fff;
  }
  
  [data-theme="dark"] .form-floating label {
    color: #adb5bd;
  }
  
  [data-theme="dark"] .btn-google {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.2);
    color: #fff;
  }
  
  [data-theme="dark"] .divider-text {
    background: rgba(30, 30, 30, 0.95);
    color: #adb5bd;
  }
</style>

<div class="login-container">
  <div class="login-card">
    <!-- Header with Logo -->
    <div class="login-header">
      <div class="content">
        <div class="logo-container">
          <%= image_tag "/img/vantage_logo.svg", alt: "Vantage Dokku", class: "logo" %>
        </div>
        <h1 class="login-title">Welcome Back</h1>
        <p class="login-subtitle">Sign in to manage your Dokku deployments</p>
      </div>
    </div>

    <!-- Login Form -->
    <div class="login-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
        <!-- Email Input -->
        <div class="form-floating">
          <%= f.email_field :email, 
              autofocus: true, 
              autocomplete: "email", 
              class: "form-control", 
              id: "floatingEmail",
              placeholder: "name@example.com" %>
          <%= f.label :floatingEmail, "Email address" %>
        </div>

        <!-- Password Input -->
        <div class="form-floating">
          <%= f.password_field :password, 
              autocomplete: "current-password", 
              class: "form-control", 
              id: "floatingPassword",
              placeholder: "Password" %>
          <%= f.label :floatingPassword, "Password" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="remember-me">
            <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
            <%= f.label :remember_me, "Keep me signed in", class: "form-check-label", for: "rememberMe" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div class="d-grid mb-3">
          <%= f.submit "Sign In", class: "btn btn-login btn-lg" %>
        </div>
      <% end %>

      <!-- OAuth Sign-In -->
      <% if OauthSetting.google_enabled? %>
        <div class="divider">
          <span class="divider-text">Or continue with</span>
        </div>
        
        <div class="d-grid">
          <%= link_to "/users/auth/google_oauth2", 
              method: :post,
              class: "btn btn-google btn-lg d-flex align-items-center justify-content-center",
              data: { turbo: false } do %>
            <i class="fab fa-google me-2" style="color: #dc3545;"></i>
            Continue with Google
          <% end %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="login-links">
        <%- if devise_mapping.registerable? %>
          <%= link_to "Create new account", new_registration_path(resource_name), class: "btn-signup" %>
          <br>
        <% end %>
        
        <%- if devise_mapping.recoverable? %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
      </div>
    </div>
  </div>
</div>