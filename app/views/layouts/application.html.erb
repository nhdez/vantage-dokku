<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Vantage" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <%= yield :head %>
    <%= theme_meta_tags %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/img/vantage_logo.svg" type="image/svg+xml">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">
    <link rel="shortcut icon" href="/favicon.ico">

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
      />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap"
      rel="stylesheet"
      />
    <!-- MDB:  -->
    <link
      href="https://cdn.jsdelivr.net/npm/mdb-ui-kit@9.0.0/css/mdb.min.css"
      rel="stylesheet"
      />

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    
    <!-- Mobile Menu Styles -->
    <style>
      /* Ensure mobile menu works properly */
      .navbar-collapse {
        transition: height 0.35s ease;
      }
      
      .navbar-collapse.show {
        display: block !important;
      }
      
      .navbar-collapse.collapsing {
        height: auto;
        transition: none;
      }
      
      /* Make sure burger menu is visible */
      .navbar-toggler {
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 4px 8px;
      }
      
      .navbar-toggler:focus {
        box-shadow: 0 0 0 0.2rem rgba(255, 255, 255, 0.25);
      }
      
      /* Responsive adjustments */
      @media (max-width: 991.98px) {
        .navbar-nav {
          padding-top: 0.5rem;
        }
        
        .navbar-nav .nav-link {
          padding: 0.5rem 1rem;
          border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        
        .navbar-nav .nav-link:last-child {
          border-bottom: none;
        }
        
        /* User dropdown adjustments for mobile */
        .dropdown-menu {
          position: static !important;
          float: none;
          width: 100%;
          margin-top: 0;
          background-color: rgba(255, 255, 255, 0.95);
          border: none;
        }
      }
    </style>
    
    <!-- MDB JavaScript - Load before importmap -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/mdb-ui-kit@9.0.0/js/mdb.umd.min.js"></script>
    <%= javascript_importmap_tags %>
    
    <!-- Global MDB Initialization -->
    <script>
      // Initialize MDB components on page load and after Turbo navigation
      function initializeMDB() {
        if (typeof mdb !== 'undefined') {
          // Initialize tooltips
          document.querySelectorAll('[data-mdb-tooltip-init]').forEach((tooltip) => {
            if (mdb.Tooltip) new mdb.Tooltip(tooltip);
          });

          // Initialize toasts (for notification system)
          document.querySelectorAll('.toast').forEach((toast) => {
            if (mdb.Toast) new mdb.Toast(toast);
          });

          // Initialize dropdowns
          document.querySelectorAll('[data-mdb-dropdown-init]').forEach((dropdown) => {
            if (mdb.Dropdown) new mdb.Dropdown(dropdown);
          });

          // Initialize modals
          document.querySelectorAll('[data-mdb-modal-init]').forEach((modal) => {
            if (mdb.Modal) new mdb.Modal(modal);
          });

          // Initialize collapse (for mobile menu)
          document.querySelectorAll('[data-mdb-toggle="collapse"]').forEach((trigger) => {
            if (mdb.Collapse) new mdb.Collapse(trigger);
          });
        }
      }

      // Mobile menu toggle fallback (in case MDB doesn't work)
      function initializeMobileMenu() {
        const toggler = document.querySelector('.navbar-toggler');
        const navbarNav = document.querySelector('#navbarNav');
        
        if (toggler && navbarNav) {
          toggler.addEventListener('click', function() {
            const isExpanded = navbarNav.classList.contains('show');
            
            if (isExpanded) {
              navbarNav.classList.remove('show');
              toggler.setAttribute('aria-expanded', 'false');
            } else {
              navbarNav.classList.add('show');
              toggler.setAttribute('aria-expanded', 'true');
            }
          });
        }
      }

      // Run on initial load
      document.addEventListener('DOMContentLoaded', function() {
        initializeMDB();
        initializeMobileMenu();
      });
      
      // Run after Turbo navigation
      document.addEventListener('turbo:load', function() {
        initializeMDB();
        initializeMobileMenu();
      });
      document.addEventListener('turbo:frame-load', initializeMDB);
    </script>

  </head>

  <body data-theme="<%= current_user_theme %>" data-controller="theme" data-theme-current-value="<%= current_user_theme %>" data-theme-endpoint-value="<%= user_signed_in? ? update_theme_path : '' %>">
    <!-- Navigation (hidden on auth pages except edit) -->
    <% unless devise_controller? && !(controller_name == 'registrations' && action_name == 'edit') %>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(rgba(0, 0, 0, 0.69), rgba(0, 0, 0, 0.69)), url('/img/raychan-jrNY1BZhnJg-unsplash.jpg') center/cover no-repeat; position: relative;">
      <div class="container-fluid">
        <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
          <%= image_tag "/img/vantage_logo.svg", alt: "Vantage Dokku", style: "height: 40px; width: auto;", class: "me-2" %>
        <% end %>
        
        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fas fa-bars"></i>
        </button>
        
        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Dashboard", dashboard_path, class: "nav-link #{'active' if controller_name == 'dashboard' && action_name == 'index' && !(params[:controller]&.starts_with?('admin/'))}" %>
              </li>
              <li class="nav-item">
                <%= link_to "Servers", servers_path, class: "nav-link #{'active' if controller_name == 'servers'}" %>
              </li>
              <li class="nav-item">
                <%= link_to "Apps", deployments_path, class: "nav-link #{'active' if controller_name == 'deployments'}" %>
              </li>
              <li class="nav-item">
                <%= link_to "SSH Keys", ssh_keys_path, class: "nav-link #{'active' if controller_name == 'ssh_keys'}" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Home", root_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
          
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <!-- Theme Toggle -->
              <li class="nav-item d-flex align-items-center me-3">
                <%= theme_toggle_button(classes: 'theme-toggle', show_label: false) %>
              </li>
              <!-- User Menu -->


              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
                  <% if current_user.profile_picture.attached? %>
                    <%= image_tag current_user.profile_picture, class: "rounded-circle me-2", style: "width: 32px; height: 32px; object-fit: cover;" %>
                  <% else %>
                    <div class="avatar bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                      <span class="text-white fw-bold" style="font-size: 0.8rem;"><%= current_user.initials %></span>
                    </div>
                  <% end %>
                  <%= current_user.full_name.presence || current_user.email.split('@').first.titleize %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                  <li><h6 class="dropdown-header">Welcome, <%= current_user.full_name.presence || current_user.email.split('@').first.titleize %>!</h6></li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                      <i class="fas fa-user-cog me-2"></i>Account Settings
                    <% end %>
                  </li>
                  <li>
                    <%= link_to linked_accounts_path, class: "dropdown-item" do %>
                      <i class="fas fa-link me-2"></i>Linked Accounts
                    <% end %>
                  </li>
                  <% if current_user.admin? %>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                      <%= link_to admin_root_path, class: "dropdown-item" do %>
                        <i class="fas fa-lock me-2"></i>Administration
                      <% end %>
                    </li>
                  <% end %>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item text-danger" do %>
                      <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                    <% end %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign in", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <% end %>

    <!-- Main Content -->
    <main class="<%= (devise_controller? && !(controller_name == 'registrations' && action_name == 'edit')) ? '' : 'container-fluid' %> <%= 'py-4' if controller_name != 'home' && !(devise_controller? && !(controller_name == 'registrations' && action_name == 'edit')) %>" style="<%= '--mdb-gutter-x: 0rem !important;' if controller_name == 'home' %>">
      <%= render 'shared/breadcrumbs' if user_signed_in? && !(devise_controller? && !(controller_name == 'registrations' && action_name == 'edit')) %>
      <%= yield %>
    </main>

    <!-- Toast Container -->
    <%= toast_container %>
    
    <!-- Flash Message Toasts -->
    <%= render_flash_toasts %>

    <!-- Footer (hidden on auth pages except edit) -->
    <% unless devise_controller? && !(controller_name == 'registrations' && action_name == 'edit') %>
    <footer class="bg-light text-center text-lg-start mt-5">
      <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        © <%= Date.current.year %> Vantage Dokku by
        <%= link_to "DataPolaris", "https://datapolaris.com/", class: "text-dark" %>
      </div>
    </footer>
    <% end %>
  </body>
</html>
